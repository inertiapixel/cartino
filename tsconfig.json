{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": ".",
    "lib": ["es2018"],
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./src",
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "pretty": true,
    "newLine": "lf"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
